{
  "name": "vue2-dynamic-module-federation",
  "version": "0.0.1",
  "description": "A dynamic module federation built with Vue.js 2",
  "license": "MIT",
  "homepage": "https://github.com/lacodda/vue2-dynamic-module-federation",
  "author": {
    "name": "Kirill Lahtachev",
    "email": "lahtachev@gmail.com",
    "url": "http://lacodda.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:lacodda/vue2-dynamic-module-federation.git"
  },
  "bugs": {
    "url": "https://github.com/lacodda/vue2-dynamic-module-federation/issues"
  },
  "scripts": {
    "start": "node config/start.mjs --mode=development",
    "build": "node config/start.mjs --mode=production",
    "lint": "npm run lint -ws",
    "serve": "concurrently --names \"Host,App-1,App-2\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"npm run serve:host\" \"npm run serve:app1\" \"npm run serve:app2\"",
    "serve:host": "serve dist/host -p 3000",
    "serve:app1": "serve dist/app1 -p 3001",
    "serve:app2": "serve dist/app2 -p 3002",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "module federation",
    "dynamic federation",
    "microfrontend",
    "vue",
    "vue 2"
  ],
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "zx": "^7.2.2"
  }
}
